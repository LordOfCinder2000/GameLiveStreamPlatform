{
	"extends": "@quasar/app-vite/tsconfig-preset",
	"compilerOptions": {
		"baseUrl": ".",
		"noImplicitThis": false,
		"skipLibCheck": true,
		// "noImplicitAny": false,
		"paths": {
			"src/*": ["src/*"],
			"app/*": ["*"],
			"components/*": ["src/components/*"],
			"layouts/*": ["src/layouts/*"],
			"pages/*": ["src/pages/*"],
			"assets/*": ["src/assets/*"],
			"boot/*": ["src/boot/*"],
			"stores/*": ["src/stores/*"],
			"composables/*": ["src/composables/*"],
			"composables": ["src/composables"],
			"modules/*": ["src/modules/*"],
			"apis/*": ["src/apis/*"],
			"apis": ["src/apis"],
			"directives/*": ["src/directives/*"],
			"directives": ["src/directives"]
		}
	}
}
